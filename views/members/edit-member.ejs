<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <h1>Edit Member Data</h1>
    <div>
        <form action="/members/edit/<%= editMember.id %>" method="POST">
            <label for="name"><b>Name</b></label><br/>
            <input type="text" name="name" value="<%= editMember.name %>"><br/>

            <label for="email"><b>Email</b></label><br/>
            <input type="text" name="email" value="<%= editMember.email %>"><br/>

            <label for="address"><b>Address</b></label><br/>
            <input type="text" name="address" value="<%= editMember.address %>"><br/>

            <label for="phone_number"><b>Phone Number</b></label><br/>
            <input type="text" name="phone_number" value="<%= editMember.phone_number %>"><br/>

            <label for="gender"><b>Gender</b></label><br/><br/>
            <input type="radio" name="gender" value="female" <%= editMember.gender == "female" && 'checked' %> >
            <label for="female">Female</label>
            <input type="radio" name="gender" value="male" <%= editMember.gender == "male" && 'checked' %> >
            <label for="male">Male</label><br/><br/>

            <input type="submit" value="Update">
            <a href="/members">
                <input type="button" value="Cancel">
            </a>
        </form>
        <% if (errorValidation) { %>
            <% errorValidation = errorValidation.split(',') %>
            <% errorValidation.forEach(error => { %>
                <div class="alert">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                    <strong>Warning! </strong><%= error %>
                  </div>              
            <% }) %>
        <% } %>
    </div>
</body>
</html>