<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/navbar.ejs') %>
    <h1>Book List</h1>
    <button class="btn-add"><a href="/books/<%= page %>/add">Add New Book</a></button>
    <% for (let i = 1; i <= totalPage; i++) { %>
        <button class="btn-page"><a href="/books/<%= i %>"><%= i %></a></button>
    <% } %>
    <table>
        <tr>
            <th>No.</th>
            <th>Code-Book</th>
            <th>Title</th>
            <th>Published Year</th>
            <th>Publisher</th>
            <th>Author</th>
            <th>Category</th>
            <th>Rental Price</th>
            <th>Action</th>
        </tr>
        <% dataBooks.forEach((book, index) => { %>
            <tr>
                <td><%= offset + index + 1 %></td>
                <td><%= generateCodeBook(book.title, book.id, book.isbn) %></td>
                <td><%= book.title %></td>
                <td><%= book.published_year %></td>
                <td><%= book.publisher %></td>
                <td><%= book.author %> </td>
                <td><%= book.category %> </td>
                <td><%= book.rent_price %> </td>
                <td><button class="btn-action"><a href="/books/edit/<%= book.id %>" class="a-button">Edit</a></button><button class="btn-action"><a href="/books/delete/<%= book.id %>" onclick="return confirm('Are you sure you want to delete this book data?')">Delete</a></button></td>      
            </tr>
        <% }) %>
    </table>
</body>
</html>